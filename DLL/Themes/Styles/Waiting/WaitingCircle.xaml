<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:waiting="clr-namespace:ZmCclL.Controls.Waiting">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="WaitingBase.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="WaitingCircleBaseStyle" BasedOn="{StaticResource WaitingBaseStyle}" TargetType="waiting:WaitingCircle">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="DotDiameter" Value="5"/>
        <Setter Property="DotInterval" Value="30"/>
        <Setter Property="DotOffSet" Value="50"/>
        <Setter Property="DotDelayTime" Value="100"/>
        <Setter Property="DotSpeed" Value="4"/>
        <Setter Property="DotCount" Value="6"/>
    </Style>
 <!--DotDelayTime="100" DotOffSet="50" DotSpeed="5" DotCount="6" Width="80" Height="80"-->
    <Style BasedOn="{StaticResource WaitingCircleBaseStyle}" TargetType="waiting:WaitingCircle"/>
</ResourceDictionary>